<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:background="@color/black"    android:padding="8dp"    >    <androidx.cardview.widget.CardView        android:id="@+id/cardView"        android:layout_width="84dp"        android:layout_height="96dp"        app:cardCornerRadius="8dp"        app:layout_constraintBottom_toTopOf="@+id/tittle"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintVertical_chainStyle="spread_inside">        <ImageView            android:id="@+id/poster_image"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            tools:srcCompat="@tools:sample/backgrounds/scenic" />    </androidx.cardview.widget.CardView>    <TextView        android:id="@+id/tittle"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="TextView"        android:singleLine="true"        android:textSize="12sp"        android:textColor="@color/white"        app:layout_constraintBottom_toTopOf="@+id/releas_date"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/cardView" />    <TextView        android:id="@+id/releas_date"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="4dp"        android:text="@string/release_date"        android:singleLine="true"        android:textSize="11sp"        android:textColor="@color/white"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/tittle" /></androidx.constraintlayout.widget.ConstraintLayout>